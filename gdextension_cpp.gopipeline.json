{
   "environment_variables": [
      {
         "name": "GODOT_STATUS",
         "value": "gdextension.godot-cpp"
      }
   ],
   "group": "gamma",
   "label_template": "gdextension.godot-cpp.${godot-template-groups-4-x_pipeline_dependency}.${COUNT}",
   "materials": [
      {
         "name": "godot-template-groups-4-x_pipeline_dependency",
         "pipeline": "godot-template-groups-4-x",
         "stage": "defaultStage",
         "type": "dependency"
      },
      {
         "branch": "groups-4.0",
         "destination": "godot-cpp",
         "ignore_for_scheduling": false,
         "name": "godot-cpp",
         "shallow_clone": false,
         "type": "git",
         "url": "https://github.com/V-Sekai/godot-cpp.git"
      }
   ],
   "name": "gdextension-cpp",
   "stages": [
      {
         "jobs": [
            {
               "artifacts": [
                  {
                     "destination": "",
                     "source": "extension_api.json",
                     "type": "build"
                  }
               ],
               "name": "generateApiJsonJob",
               "resources": [
                  "linux",
                  "mingw5"
               ],
               "tasks": [
                  {
                     "artifact_origin": "gocd",
                     "destination": "",
                     "is_source_a_file": true,
                     "job": "linuxJob",
                     "pipeline": "godot-template-groups-4-x",
                     "source": "godot.linuxbsd.opt.tools.64.llvm",
                     "stage": "defaultStage",
                     "type": "fetch"
                  },
                  {
                     "arguments": [
                        "-c",
                        "chmod +x godot.linuxbsd.opt.tools.64.llvm && ./godot.linuxbsd.opt.tools.64.llvm --headless --dump-extension-api extension_api.json || true"
                     ],
                     "command": "/bin/bash",
                     "type": "exec",
                     "working_directory": ""
                  }
               ]
            }
         ],
         "name": "generateApiJsonStage"
      },
      {
         "jobs": [
            {
               "artifacts": [
                  {
                     "destination": "godot-cpp",
                     "source": "godot-cpp/include",
                     "type": "build"
                  },
                  {
                     "destination": "godot-cpp",
                     "source": "godot-cpp/godot-headers",
                     "type": "build"
                  },
                  {
                     "destination": "godot-cpp",
                     "source": "godot-cpp/bin",
                     "type": "build"
                  }
               ],
               "name": "windowsJob",
               "resources": [
                  "linux",
                  "mingw5"
               ],
               "tasks": [
                  {
                     "artifact_origin": "gocd",
                     "destination": "",
                     "is_source_a_file": true,
                     "job": "generateApiJsonJob",
                     "pipeline": "gdextension-cpp",
                     "source": "extension_api.json",
                     "stage": "generateApiJsonStage",
                     "type": "fetch"
                  },
                  {
                     "arguments": [
                        "-c",
                        "PATH=/opt/llvm-mingw/bin:$PATH scons werror=no platform=windows target=release -j`nproc` use_lto=no deprecated=no generate_bindings=yes custom_api_file=../extension_api.json use_mingw=yes use_llvm=yes use_lld=yes use_thinlto=yes LINKFLAGS=-Wl,-pdb= CCFLAGS='-g -gcodeview' debug_symbols=no"
                     ],
                     "command": "/bin/bash",
                     "type": "exec",
                     "working_directory": "godot-cpp"
                  }
               ]
            },
            {
               "artifacts": [
                  {
                     "destination": "godot-cpp",
                     "source": "godot-cpp/include",
                     "type": "build"
                  },
                  {
                     "destination": "godot-cpp",
                     "source": "godot-cpp/godot-headers",
                     "type": "build"
                  },
                  {
                     "destination": "godot-cpp",
                     "source": "godot-cpp/bin",
                     "type": "build"
                  }
               ],
               "name": "linuxJob",
               "resources": [
                  "linux",
                  "mingw5"
               ],
               "tasks": [
                  {
                     "artifact_origin": "gocd",
                     "destination": "",
                     "is_source_a_file": true,
                     "job": "generateApiJsonJob",
                     "pipeline": "gdextension-cpp",
                     "source": "extension_api.json",
                     "stage": "generateApiJsonStage",
                     "type": "fetch"
                  },
                  {
                     "arguments": [
                        "-c",
                        "scons werror=no platform=linux target=release -j`nproc` use_lto=no deprecated=no generate_bindings=yes custom_api_file=../extension_api.json use_static_cpp=yes use_llvm=yes builtin_freetype=yes"
                     ],
                     "command": "/bin/bash",
                     "type": "exec",
                     "working_directory": "godot-cpp"
                  }
               ]
            }
         ],
         "name": "godotCppStage"
      }
   ]
}
